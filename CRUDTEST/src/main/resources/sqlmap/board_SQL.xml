<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="Board">
  	<select id="boardList" resultType="boardVo">
		select * from board  	
  	</select>
  	
  	<update id="updateHit" parameterType="int">
		update board
		set
		bohit =  bohit+1
		where  bono = #{bono}   	
  	</update>
  	
  	<select id="detailBoard" parameterType="int" resultType="boardVo">
  		select * from board
  		where bono = #{bono}
  	</select>
  	
  	<delete id="boardDel" parameterType="int">
  		delete from board
  		where bono = #{bono}
  	</delete>
  	
  	<insert id="insertBoard" parameterType="map">
  	 insert into board
  	 (bono,botitle,bocontent,bowriter,bodate)
  	 values(seq_board.nextval,#{botitle},#{bocontent},#{mem_id},sysdate)
  	</insert>
  	
  	<select id="selectBoard" parameterType="int" resultType="boardVo">
  		select * from board where bono = #{bono}
  
  	</select>
  	
  	<update id="updateBoard" parameterType="map">
  			update board
  			set
  			botitle = #{botitle},
  			bocontent = #{bocontent},
  			bowriter = #{mem_id}
  			where 
  			bono = #{bono}
  		</update>
  </mapper>